<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/title_of_your_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_of_each_task"/>

        <EditText
            android:id="@+id/write_your_title_here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/deadline_of_your_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_of_your_task"/>

        <DatePicker
            android:id="@+id/date_of_your_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/details_of_your_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details_of_your_task"/>

        <EditText
            android:id="@+id/type_your_details_here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"/>
    </LinearLayout>

</LinearLayout>